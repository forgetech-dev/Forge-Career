        android:padding="8dp">


        <RadioButton
            android:id="@+id/filterSelection4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Applied" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterSelectionLayout5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <RadioButton
            android:id="@+id/filterSelection5"
            android:layout_width="wrap_content"
