<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forgetech.forgecareer">

    <application
        android:allowBackup="true"
        android:icon="@drawable/forge_career_logo_144_144"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ForgeCareer">
        <activity
            android:name="com.forgetech.forgecareer.EditApplicationActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.forgetech.forgecareer.AddApplicationActivity"
            android:exported="false"
            android:parentActivityName="com.forgetech.forgecareer.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.forgetech.forgecareer.FirebaseActivityTemp"
            android:exported="false" />
        <activity
            android:name="com.forgetech.forgecareer.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.forgetech.forgecareer.MainActivity"
            android:exported="true" />
    </application>

</manifest>